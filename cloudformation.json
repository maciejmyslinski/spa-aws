{
  "Resources": {
    "Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "Private",
        "BucketName": {
          "Fn::Sub": "${ProjectName}-${BranchName}"
        },
        "WebsiteConfiguration": {
          "IndexDocument": "index.html"
        }
      }
    },
    "s3BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "Bucket"
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "PublicReadGetObject",
              "Effect": "Allow",
              "Principal": "*",
              "Action": ["s3:GetObject"],
              "Resource": [
                {
                  "Fn::Sub": "arn:aws:s3:::${ProjectName}-${BranchName}/*"
                }
              ]
            }
          ]
        }
      }
    },
    "cloudfrontDistribution": {
      "Type": "AWS::CloudFront::Distribution",
      "Properties": {
        "DistributionConfig": {
          "CacheBehaviors": {
            "Compress": true,
            "ViewerProtocolPolicy": "redirect-to-https"
          },
          "CustomErrorResponses": {
            "ErrorCode": 404,
            "ResponseCode": 200,
            "ResponsePagePath": "/index.html"
          },
          "DefaultRootObject": "index.html",
          "Enabled": true,
          "HttpVersion": "http2",
          "Origins": [
            {
              "DomainName": {
                "Fn::Sub": "BucketUrl"
              },
              "Id": {
                "Fn::Sub": "BucketUrl"
              },
              "CustomOriginConfig": {
                "OriginProtocolPolicy": "https-only"
              }
            }
          ],
          "ViewerCertificate": {
            "CloudFrontDefaultCertificate": true
          }
        }
      }
    }
  },
  "Parameters": {
    "BranchName": {
      "Type": "String"
    },
    "ProjectName": {
      "Type": "String"
    }
  },
  "Outputs": {
    "BucketUrl": {
      "Value": {
        "Fn::GetAtt": ["Bucket", "WebsiteURL"]
      }
    }
  }
}
